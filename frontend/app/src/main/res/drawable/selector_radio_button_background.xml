<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: pressed effect (no elevation) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Button background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#cccccc" /> <!-- Border -->
        </shape>
    </item>

    <!-- Normal state: elevated effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Button background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#cccccc" /> <!-- Border -->
            <shadowColor android:color="#000000" />
            <shadowDx>0</shadowDx>
            <shadowDy>2dp</shadowDy>
            <shadowRadius>4dp</shadowRadius> <!-- Shadow for elevation effect -->
        </shape>
    </item>
</selector>
